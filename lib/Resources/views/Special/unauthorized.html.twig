{% extends "AgitWebappBundle:Include:page.html.twig" %}

{% agit.capability "" %}
{% agit.status 401 %}
{% set noindex = 1 %}
{% agit.name t("Login required") %}

{% block js %}
    {% javascripts
        "@AgitUiBundle/Resources/public/js/lib/elem/Form.js"
        "@AgitUiBundle/Resources/public/js/lib/elem/FormRow.js"
        "@AgitUiBundle/Resources/public/js/lib/field/Password.js"

        "@AgitWebappBundle/Resources/public/js/lib/Form.js"
        "@AgitWebappBundle/Resources/public/js/ctl/init.js"
        "@AgitWebappBundle/Resources/public/js/ctl/page.unauthorized.js"
        filter="?uglifyjs"
    %}
    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block templates %}
    {% include "AgitWebappBundle:Include:template.forms.html.twig" %}
{% endblock %}
